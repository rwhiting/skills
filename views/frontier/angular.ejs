<% page = { 'title' : 'Frontier: Angular', 'key': 'FRONTIER_PAGE_NAME'} %>
<% assets = { 'css' : ['common.css','frontier/angularUI.css'], 'js' : ['frontier/angularUI.js','angular-1.0.3.js'] } %>

<%- partial('partials/frontier-nav') %>
<section ng-app ng-controller="ShoppingCtrl">
	<h4>Shopping List: {{getTotalProducts()}} Item(s)</h4>
	<ul>
		<li ng-repeat="product in products">
			<input type="checkbox" ng-model="product.purchased">
			<span class="purchased-{{product.purchased}}">{{product.name}} at {{product.store}}</span>
		</li>
	</ul>

	<button ng-click="clearPurchased()" class="remove-button">Removed Purchased</button>
	<h5>Add Item to Shopping List:</h5>
	<form>
		Product: <input type="text" ng-model="formProductText">
		Store: <input type="text" ng-model="formStoreText">
		<button ng-click="addProduct()">Add New Item</button>
	</form>
</section>

